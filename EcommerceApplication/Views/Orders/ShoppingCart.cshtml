@using EcommerceApplication.Data.ViewModels;
@model ShoppingCartViewModel

@{
    ViewData["Title"] = " خلاصه سفارش";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>خلاصه سفارش ها</h2>
        </div>
        <table class="table">
            <thead>
                <tr>
                <td>تعداد</td>
                <td>فیلم</td>
                <td>قیمت واحد</td>
                <td>مجموع</td>
                <td>

                </tr>

                
            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Movie.Name</td>
                        <td class="align-middle">@item.Movie.Price.ToString("c")</td>
                        <td class="align-middle">@((item.Amount * item.Movie.Price).ToString("c"))</td>
                        <td class="align-middle">

                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart"
                                asp-route-id="@item.Movie.Id">
                                <i class="bi bi-trash"></i>
                            </a>
                            |
                            <a class="text-primary" asp-controller="Orders" asp-action="AddItemToShoppingCart"
                           asp-route-id="@item.Movie.Id">
                                <i class="bi bi-cart-plus"></i>   
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>قیمت کل :</b></td>
                    <td>@Model.ShoppingCartTotal.ToString("c")</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <div class="text-right" style="padding:10px;">
            <div class="btn-group" >
                <a class="btn btn-outline-primary" asp-controller="Movies" asp-action="index">
                    ادامه خرید
                </a>
                |
                <a class="btn btn-outline-success"  asp-action="CompleteOrder">
                    تکمیل خرید
                </a>
               
            </div>
        </div>
    </div>
</div>