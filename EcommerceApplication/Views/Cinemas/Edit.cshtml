@model Cinema
@{
    ViewData["Title"] = "ویرایش یک سینما ";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>ویرایش یک سینما</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="PicUpload" class="control-label"></label>*@
                        <input asp-for="PicUpload" />
                        @*<span asp-validation-for="PicUpload" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ویرایش" class="btn btn-outline-success float-right " />
                        <a class="btn btn-outline-secondary" asp-action="Index">نمایش همه</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

